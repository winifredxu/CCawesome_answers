<% if @comment.errors.any? %>
  $('#<%= dom_id(@answer) %> .comment-form').html("<%= j render partial: "/comments/form", locals: { answer: @answer } %>");   //need both answer and comment var in _form.html.erb
<% else %>
  //JS selector is #answer_id then .comments to ensure unique preprend
  $('#<%= dom_id(@answer) %> .comments').prepend("<%= j render partial: '/comments/comment', locals: { answer: @answer, comment: @comment } %>");  //'j' escapes javascript \", \n, and all special chars

  <% @comment = Comment.new %>
  $('#<%= dom_id(@answer) %> .comment-form').html("<%= j render partial: "/comments/form", locals: { answer: @answer } %>"); 
<% end %>
