<div id="<%= dom_id(answer) %>">
  <%= answer.body %> 
  <p>Answer by: <%= answer.user_first_name %></p>
  <%= link_to "Delete", question_answer_path(@question.id, answer.id), method: "delete", data: {confirm: "delete this answer for real?"}, class: "btn btn-sm btn-danger", remote: true  %>
  <!-- remote: true -- means rails send form via JS instead of default HTML -->

  <%#= button_to "Delete", question_answer_path(@question.id, answer.id), method: :delete, data: {confirm: "delete this answer for real?"}, class: "btn btn-sm btn-danger" %>

  <div class="comment-form">
    <%= render partial: "/comments/form", locals: { answer: answer } %>  <!-- refactor comment form into comment's view folder partial form -->
  </div>

  <hr>
  <div class="comments">
    <% answer.comments.each do |comt| %>   <!-- refactor code to _comment.html.erb -->
      <%= render partial: "/comments/comment", locals: { comment: comt, answer: answer } %>
    <% end %>
  </div>
</div>