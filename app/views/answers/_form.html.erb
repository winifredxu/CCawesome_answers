<%= simple_form_for [@question, @answer], html: { class: 'form-horizontal' }, 
		remote:true do |f| %>  
<!-- remote:true is so the form_for is sent as JS -->
<!-- form_for submit to POST /question/:id/answer  by convention -->

	<%= f.input :body %>
	<%= f.submit class: "btn btn-primary" %> 
<% end %>